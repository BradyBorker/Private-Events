<%= render "header" %>

<h1>Created Events:</h1>
<div style="margin: 10px;">
    <% @user.created_events.each do |event| %>
        <div style="display: flex; flex-direction: column; margin: 10px;">
            <div><%= event.title %></div>
            <div><%= event.date %></div>
            <div><%= event.body %></div>
            <div>
                <%= link_to "Edit", edit_event_path(event) %>
                <%= link_to "Delete" %>
            </div>
        </div>
    <% end %>
</div>

<h1>Upcoming Events:</h1>
<div style="margin: 10px;">
    <% @user.attending_events.future_events.each do |event| %>
        <%= link_to event.title, event_path(event) %>
    <% end %>
</div>

<h1>Past Events:</h1>
<div style="margin: 10px;">
    <% @user.attending_events.past_events.each do |event| %>
        <%= link_to event.title, event_path(event) %>
    <% end %>
</div>


